<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         metadata-complete="false"
         version="2.5">

    <display-name>Camera Notifier</display-name>

    <filter>
        <filter-name>CameraAuthorizationFilter</filter-name>
        <filter-class>org.djr.camera.auth.CameraAuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CameraAuthorizationFilter</filter-name>
        <url-pattern>/api/camera/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CameraPostFilter</filter-name>
        <filter-class>org.djr.camera.rest.post.CameraPostFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CameraPostFilter</filter-name>
        <url-pattern>/api/camera/post/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SensorAuthorizationFilter</filter-name>
        <filter-class>org.djr.camera.auth.SensorAuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SensorAuthorizationFilter</filter-name>
        <url-pattern>/api/sensor/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>UserAuthorizationFilter</filter-name>
        <filter-class>org.djr.camera.auth.UserAuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserAuthorizationFilter</filter-name>
        <url-pattern>/api/user/auth/*</url-pattern>
    </filter-mapping>
